<Window x:Class="TestTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestTool" 
        xmlns:controls="clr-namespace:TestTool.Domain.Controls"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1200">
    <TabControl TabStripPlacement="Left">
        <TabItem Height="30">
            <TabItem.Header>
                <StackPanel Orientation="Horizontal">
                    <TextBlock>Test Plan</TextBlock>
                </StackPanel>
            </TabItem.Header>
            <controls:TestPlanControl/>
        </TabItem>
        <TabItem  Height="30">
            <TabItem.Header>
                <StackPanel Orientation="Horizontal">
                    <TextBlock>Test Lab</TextBlock>
                </StackPanel>
            </TabItem.Header>
            <controls:TestLabControl/>
        </TabItem>
    </TabControl>
</Window>
